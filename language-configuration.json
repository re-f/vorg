{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["*", "*"],
    ["/", "/"],
    ["_", "_"],
    ["=", "="],
    ["~", "~"],
    ["+", "+"],
    ["$", "$"]
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["*", "*"],
    ["/", "/"],
    ["_", "_"],
    ["=", "="],
    ["~", "~"],
    ["+", "+"],
    ["$", "$"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\*+\\s+",
      "end": "^\\s*\\*+\\s+"
    },
    "offSide": true
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(-|\\+|\\*|\\d+\\.|[a-zA-Z]\\.)\\s+",
    "decreaseIndentPattern": "^\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(-|\\+|\\*|\\d+\\.|[a-zA-Z]\\.)\\s+.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(-|\\+|\\*)\\s+\\[[ X-]\\]\\s+.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\|.*\\|\\s*$",
      "action": {
        "indent": "none"
      }
    }
  ]
} 