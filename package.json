{
  "name": "vorg",
  "displayName": "VOrg",
  "description": "Org-mode preview for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:org"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vorg.preview",
        "title": "VOrg: Open Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == org",
          "command": "vorg.preview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "uniorg": "^2.0.0",
    "uniorg-parse": "^2.0.0",
    "uniorg-rehype": "^2.0.0",
    "rehype-stringify": "^9.0.3"
  }
} 